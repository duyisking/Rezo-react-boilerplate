{
  "name": "rezo-react-boilerplate",
  "version": "1.0.0",
  "description": "Rezo's boilerplate that uses React.js, SASS, Node.js and Express.js",
  "scripts": {
    "build": "npm run webpack && npm run pre-build && npm run webpack-server && npm run node",
    "dev-client": "node src/server/dummy/index.js & webpack-dev-server && fg",
    "dev-client-win": "start node src/server/dummy/index.js && start webpack-dev-server",
    "dev-server": "SERVER_ONLY=true webpack --config webpack.server.config.js",
    "dev-server-win": "set SERVER_ONLY=true && webpack --config webpack.server.config.js",
    "jest": "jest",
    "lint": "eslint -o logs/eslint.log -f table --no-color $FILE",
    "lint-client": "eslint -o logs/eslint.client.log -f table --no-color --ext .jsx --ext .js src/client",
    "lint-server": "eslint -o logs/eslint.server.log -f table --no-color --ext .jsx --ext .js src/server",
    "lint-all": "npm run lint-client && npm run lint-server",
    "new-component": "node scripts/new-component.js",
    "node": "node dist/index.js",
    "pre-build": "node scripts/pre-build.js",
    "start": "webpack --config webpack.server.config.js & webpack-dev-server && fg",
    "start-win": "start webpack --config webpack.server.config.js && start webpack-dev-server",
    "test": "npm run lint-all && jest",
    "webpack": "webpack",
    "webpack-server": "webpack --config webpack.server.config.js"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "@rezolabs/pre-build": "^0.1.0",
    "antd": "^3.10.9",
    "async": "^2.6.0",
    "axios": "^0.16.2",
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.4.1",
    "cookie-parser": "^1.4.3",
    "device": "^0.3.9",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "find": "^0.2.9",
    "helmet": "^3.12.1",
    "http-proxy": "^1.17.0",
    "jsdom": "^11.10.0",
    "lodash": "^4.17.10",
    "mobile-detect": "^1.4.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-helmet": "^5.2.0",
    "react-lazy-load": "^3.0.13",
    "react-loadable": "^5.5.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "source-map-support": "^0.5.6",
    "typescript": "^3.1.1",
    "webpack-bundle-analyzer": "^2.12.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.1",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-import": "^1.11.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "commander": "^2.19.0",
    "css-loader": "^0.28.11",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^1.1.11",
    "ignore-loader": "^0.1.2",
    "jest": "^23.6.0",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.4",
    "optimize-css-assets-webpack-plugin": "^4.0.3",
    "postcss-loader": "^2.1.6",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.23.1",
    "uglify-js": "^3.4.9",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
